<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="coding.spring_boot_mybatis.mapper.BoardMapper">

    <select id="findAll" resultType="coding.spring_boot_mybatis.domain.Post">
        SELECT * FROM board
    </select>
    
    <select id="findByWriter" parameterType="string" resultType="coding.spring_boot_mybatis.domain.Post">
        SELECT * FROM board where writer = #{writer}
    </select>
    
    <insert id="insert" parameterType="coding.spring_boot_mybatis.domain.Post" useGeneratedKeys = "true" keyProperty = "id">
        INSERT INTO board (title, content, writer) VALUES (#{title}, #{content}, #{writer})
    </insert>
    
    <update id="update" parameterType="coding.spring_boot_mybatis.domain.Post">
        Update board SET title = #{title}, content = #{content} WHERE id = #{id}
    </update>
    
    <delete id="delete" parameterType="long">
        DELETE FROM board WHERE id = #{id}
    </delete>
</mapper>

